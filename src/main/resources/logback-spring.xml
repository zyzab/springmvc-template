<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProperty scope="context" name="springAppName" source="spring.application.name"/>

    <springProfile  name="default, local">
        <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>
        <root level="Debug">
            <appender-ref ref="console"/>
        </root>
    </springProfile>

    <springProfile  name="dev, test, reg, prd">
        <!-- 综合时间与大小的滚动策略，先按天滚动，天内的文件大于10mb时再按大小滚动，最多保留7天 -->
        <appender name="rollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        	<file>/data/logs/${springAppName}/${springAppName}.log.tmp</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>/data/logs/${springAppName}/${springAppName}-%d{yyyy-MM-dd_HH}.%i.log</fileNamePattern>
                <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                    <maxFileSize>100MB</maxFileSize>
                </timeBasedFileNamingAndTriggeringPolicy>
            </rollingPolicy>
            <encoder>
                <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} [${springAppName},%X{X-B3-TraceId},%X{X-B3-SpanId},%X{X-B3-ParentSpanId},%X{X-Span-Export}]  [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>
        <root level="INFO">
            <appender-ref ref="rollingFile"/>
        </root>
    </springProfile>
</configuration>

